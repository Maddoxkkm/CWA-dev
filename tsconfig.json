{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "outDir": "./bin",
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "esModuleInterop": true  
    },
    "include": [
      "src/**/*.ts",
      "./index.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  